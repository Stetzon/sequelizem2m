<h2>Users</h2>
{{#if users}}
  <ul>
  {{#each users}}
    <li>Name: {{ name }}</li>
    {{#if pets.id}}
      <h4>Pets:</h4>
      <ul>
        {{#each}}
          <li>Role: {{pets.user_pet.role}}</li>
          <li>Name: {{pets.name}}</li>
        {{/each}}
      </ul>
    {{/if}}
  {{/each}}
  </ul>
{{else}}
  <p>no users found</p>
{{/if}}

<h3>Create User</h3>
<form id="create-user">
  <input type="text" name="name" required>
  <button type="submit">Create</button>
</form>

<br><hr>

<h2>Pets</h2>
{{#if pets}}
  <ul>
  {{#each pets}}
    <li>Name: {{ name }}</li>
    {{#if users.id}}
      <h4>People:</h4>
      <ul>
        {{#each}}
          <li>Role: {{users.user_pet.role}}</li>
          <li>Name: {{users.name}}</li>
        {{/each}}
      </ul>
    {{/if}}
  {{/each}}
  </ul>
{{else}}
  <p>no pets found</p>
{{/if}}

<h3>Create Pet</h3>
{{#if users}}
  <form id="create-pet">
    <label for="name">Pet Name</label>
    <input type="text" name="name" required>
    <label for="user">User</label>
    <select name="user">
      {{#each users}}
        <option value="{{id}}">{{ name }}</option>
      {{/each}}
    </select>
    <select name="role">
      <option value="Owner">Owner</option>
      <option value="Vet">Vet</option>
      <option value="Sitter">Sitter</option>
    </select>
    <button type="submit">Create</button>
  </form>
{{else}}
  <p>You must create a user before creating a pet</p>
{{/if}}